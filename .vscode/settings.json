{
  "python.languageServer": "None",
  "python.analysis.diagnosticMode": "workspace",
  "cSpell.words": [
    "addopts",
    "capsys",
    "htmlcov",
    "maxfail",
    "monkeypatching",
    "mypy",
    "pycache",
    "pylint",
    "pytest",
    "resp",
    "venv"
  ],
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter" // Use the Black Formatter extension
  },
  "makefile.configureOnOpen": false,
  "python.defaultInterpreterPath": "venv/bin/python"
}
